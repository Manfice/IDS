
@{
    ViewBag.Title = "MessageScreen";
    Layout = "~/Views/Shared/_LayoutSFoot.cshtml";
}

<div class="messageScreen">
    <h1>Восстановление пароля</h1>
    <p>Письмо с инструкциями по смене пароль выслано на адресс электронной почты: <br/>@ViewBag.Message<br/> </p>
</div>
@section scripts{
    <script type="text/javascript">
        if ($('.messageScreen').height() + 80 < $(window).height()) {
            $('.footer').css({
                position: 'absolute',
                bottom: 0,
                width:'100%'
            });
            $('body').css({
                'background': 'url("/Content/images/twisted_pair.jpg") no-repeat center center fixed'
            });
        } else {
            $('.footer').css({
                position: 'relative'
            });
        }
    </script>
}