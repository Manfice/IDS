                <a href="@Url.Action("Test", "Home")">О Компании</a>
                <a href="@Url.Action("Test", "Home")">Контакты</a>
            </div>
            @Html.Action("MobileCurs", "Home")
            <button class="hidden-lg hidden-md hidden-sm authButton"><i class="fa fa-sign-in" aria-hidden="true"></i></button>
            <div class="mobileAuth">
                @Html.ActionLink("Вход", "Login", "Security")
                @Html.ActionLink("Регистрация", "Register", "Security")
            </div>
        </div>
    </div>
</header>

    <div class="">
        @RenderBody()
    </div>

<footer>
    <div class="footerWraper">
        <button class="callButton"><i class="fa fa-phone" aria-hidden="true"></i></button>
        <div class="telButton">
            <h3>Быстрые контакты</h3>
