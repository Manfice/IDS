    @RenderSection("links", required: false)
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
<div class="header_new hidden-xs">
    <div class="container">
        <div class="row">
            <a href="/" class="brandView" title="Главная">Industrial Development</a>
            <ul class="currensyUl hidden-xs">
                @Html.Action("CurrensyNew", "Home")
            </ul>
            @if (!User.Identity.IsAuthenticated)
            {
                <ul class="loginPartial">
                    <li><a href="@Url.Action("Register", "Security")">РЕГИСТРАЦИЯ</a><span>/</span></li>
                    <li><a href="@Url.Action("Login", "Security")">ВХОД</a></li>
                </ul>
            }
            else
            {
                @Html.Action("Logon", "Customer")
            }
        </div>
    </div>
</div>
<header class="hidden-lg hidden-md hidden-sm">
    <div class="headerWrapper">
        <div class="topStripe">
            <a href="@Url.Action("Test", "Home")" class="hidden-xs leftTitle" title="На главную">Industrial Development</a>
            <button class="hidden-lg hidden-md hidden-sm menuBtn"><i class="fa fa-bars" aria-hidden="true"></i></button>
            <div class="menuMobile">
                <p>Торговый дом "АЙДИ-С"</p>
                <a href="@Url.Action("Test", "Home")">Главная</a>
                <a href="@Url.Action("Test", "Home")">Каталог</a>
                <a href="@Url.Action("Test", "Home")">О Компании</a>
                <a href="@Url.Action("Test", "Home")">Контакты</a>
            </div>
            @Html.Action("MobileCurs", "Home")
            <button class="authButton"><i class="fa fa-sign-in" aria-hidden="true"></i></button>
            <div class="mobileAuth">
                @Html.ActionLink("Вход", "Login", "Security")
                @Html.ActionLink("Регистрация", "Register", "Security")
            </div>
        </div>
    </div>
</header>

<div id="persHelp">
    @{Html.RenderPartial("_PersonalHelp");}
</div>

<div class="bodyContent">
    @RenderBody()
</div>

<footer>
    <div class="container hidden-xs hidden-sm">
        <div class="row">
            <div class="col-md-12">
                <div class="yCounter">
                    <!-- Yandex.Metrika informer -->
                    <a href="https://metrika.yandex.ru/stat/?id=37292330&amp;from=informer"
                       target="_blank" rel="nofollow">
                        <img src="https://informer.yandex.ru/informer/37292330/3_1_FFFFFFFF_EFEFEFFF_0_pageviews"
                             style="width: 88px; height: 31px; border: 0;" alt="Яндекс.Метрика" title="Яндекс.Метрика: данные за сегодня (просмотры, визиты и уникальные посетители)" onclick="try {Ya.Metrika.informer({ i: this, id: 37292330, lang: 'ru' });return false} catch (e) {}"/>
                    </a>
                    <!-- /Yandex.Metrika informer -->
                </div>
                <p>
                    &#169 Copyright @DateTime.Today.Year All Rights Reserved <a href="/"> Industrial Development</a>
                </p>
            </div>
        </div>
    </div>
    <div class="footerWraper hidden-lg hidden-md">
        <button class="callButton"><i class="fa fa-phone" aria-hidden="true"></i></button>
        <div class="telButton">
            <h3>Быстрые контакты</h3>
            <p>Офис: +7(8652)990582</p>
            <p>Офис: +7(8652)990583</p>
            <p>Оптика: +7(8652)990582</p>
        </div>
        <button class="cartButton"><i class="fa fa-shopping-basket" aria-hidden="true"></i></button>
        <button class="cartButton"><i class="fa fa-shopping-basket" aria-hidden="true"></i></button>
        @Html.Action("CartMobile", "Home")
        <button class="messageButton"><i class="fa fa-envelope" aria-hidden="true"></i></button>
    </div>
</footer>

<script src="~/Scripts/owl.carousel.js"></script>

<script src="~/Scripts/bootstrap.min.js"></script>

<script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>

<script src="~/Scripts/jquery.maskedinput.min.js"></script>

