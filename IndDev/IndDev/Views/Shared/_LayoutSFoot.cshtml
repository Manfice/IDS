<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <link rel="icon" href="~/favicon.png">
    <title>@ViewBag.Title - Industrial Development</title>

    <link href="~/Content/bootstrap.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/fonts.css" rel="stylesheet" type="text/css"/>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="http://fonts.googleapis.com/css?family=Raleway:400,100,200,300,500,600,700,800,900" rel="stylesheet" type="text/css">
    <link href="~/Content/mairala/style.css" rel="stylesheet" type="text/css" media="all"/>
    <link rel="stylesheet" href="~/Content/mairala/fwslider.css" media="all">
    <link rel="stylesheet" type="text/css" href="~/Content/mairala/slider.css"/>
    <link href="~/Content/Main.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/Content/jquery-ui.css"/>
    <script src="~/Scripts/jquery-2.2.2.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.js"></script>
    <script type="text/javascript" src="~/Scripts/bootstrap.js"></script>
    <script src="~/Scripts/jquery-ui.js"></script>
    <script type="application/x-javascript"> 
        addEventListener("load", function() { setTimeout(hideURLbar, 0); }, false); function hideURLbar(){ window.scrollTo(0,1); } 
    </script>
    <script src="~/Scripts/mairala/css3-mediaqueries.js"></script>
    <script src="~/Scripts/mairala/fwslider.js"></script>
    <script src="~/Scripts/mairala/modernizr.custom.28468.js" type="text/javascript"></script>

    <script type="text/javascript" src="~/Scripts/mairala/jquery.cslider.js"></script>

    @RenderSection("upperscripts", required: false)
    <script type="text/javascript">
        $(function() {
            $('#da-slider').cslider({
                autoplay : true,
                bgincrement : 800
            });
        });
        $(function() {
            $("#menu").menu();
        });
    </script>
    <script type="text/javascript">
        $(function() {

            $('#da-slider1').cslider({
                autoplay : true,
                bgincrement : 1500
            });

        });
    </script>
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="myHead">
        <div class="idLogo">
            <a href="/"><img src="~/Content/images/id_logo.svg" alt="logo"/></a>
            @(User.Identity.IsAuthenticated ? Html.Action("Login", "Home", new { id = User.Identity.Name }) : Html.Partial("_LoginPartial"))
        </div>
        <div class="currensy">
            @Html.Action("Currensy","Home")
        </div>
        <div class="myShop">
            <a href="@Url.Action("Index","Shop")">МАГАЗИН<i class="fa fa-arrow-circle-o-right"></i></a>
        </div>
        <nav>
            <ul>
                <li><a href="@Url.Action("Contact","Home")">Контакты</a></li>
                <li><a>Барахолка</a></li>
                <li><a>Галерея</a></li>
                <li><a href="@Url.Action("About","Home")">Компания</a></li>
                <li><a href="@Url.Action("Index","Home")">Главная</a></li>
            </ul>
        </nav>
    </div>

<div class="renderBody">
    @RenderBody()
</div>

<div class="footer">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="copy-right">
                    <p>&#169 Copyright 2016 All Rights Reserved <a href="/"> Industrial Development</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<a href="#" id="toTop" style="display: block;"><span id="toTopHover" style="opacity: 1;"></span></a>
<!-- scroll_top_btn -->
    <script type="text/javascript" src="~/Scripts/mairala/move-top.js"></script>
    <script type="text/javascript" src="~/Scripts/mairala/easing.js"></script>
    <script type="text/javascript" src="~/Scripts/mairala/menu.js"></script>
    @RenderSection("scripts", required: false)
<script type="text/javascript">
    jQuery(document).ready(function($) {
        $(".scroll").click(function(event) {
            event.preventDefault();
            $('html,body').animate({ scrollTop: $(this.hash).offset().top }, 1200);
        });
    });
</script>
</body>
</html>