@model IEnumerable<IndDev.Domain.Entity.Menu.Menu>

<div class="myCart">
    <div class="goToCart"> 
        <a href="@Url.Action("Index")"><i class="fa fa-shopping-cart"></i></a>
    </div>
    <div class="stat">
        <h3>ООО "Связь-Инвест"</h3>
        <p>Романов Юрий</p>
        <p>Статус: "Дружище"</p>
    </div>
</div>
<ul id="menu">
    @foreach (var item in Model)
    {
        <li>
            @{if (@item.HasChild)
              {<a><i class="fa fa-arrow-circle-o-left"></i>@item.Title</a>}
            else
            {
              @Html.ActionLink(@item.Title, "Index")
  }
            }

            @Html.Action("SubMenu", new {id = item.Id.ToString()})
        </li>
    }
</ul>