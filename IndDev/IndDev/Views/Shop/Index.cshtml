@model IEnumerable<IndDev.Domain.Entity.Menu.ProductMenu>
@{
    ViewBag.Title = "Магазин";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

@section scripts{
    <script type="text/javascript">
        $(document).ready(function() {
            $(".owl-carousel").owlCarousel({
                loop: true,
                margin: 10,
                nav: false,
                autoPlay: true,
                autoplayTimeout: 1000,
                autoplayHoverPause: true,
                responsive: {
                    0: {
                        items: 1
                    },
                    1000: {
                        items: 3
                    },
                    1200: {
                        items: 5
                    }
                }
            });
        });
    </script>
}

<div class="catalog">
    @foreach (var item in Model)
    {
        <div class="productGroupe">
            <div class="catList">
                <div class="owl-carousel">
                    @foreach (var groupe in item.MenuItems)
                    {
                        <div class="item catItem">
                            <img src="@groupe.Image.Path"/>
                            <h1>@groupe.Title</h1>
                            <p>@groupe.Descr</p>
                        </div>
                    }
                </div>
            </div>
            <div class="groupeView">
                <img src="@item.Image.Path" alt="@item.Image.AltText"/>
                <h1>@item.Title</h1>
                <p>@item.Descr</p>
                <a class="btn btn-success btn-sm" href="@Url.Action("CatDetails", "Shop", new {catId = item.Id, selCat = 0})">ПОДРОБНЕЕ<i class="fa fa-arrow-circle-o-right"></i></a>
            </div>
        </div>
        <hr/>
    }
</div>
  
