@model IEnumerable<IndDev.Domain.Entity.Menu.ProductMenu>
    
@foreach (var item in Model)
            {
    <tr>
        <td>@item.Id</td>
        <td>@item.Title</td>
        <td>@item.ShotDescription</td>
        <td>
            @if (item.Image == null)
            {
                <h4>No image</h4>
            }
            else
            {
                <img src="@Url.Content(item.Image.Path)" alt="@Url.Content(item.Image.AltText)" width="100" />
            }
        </td>
        <td>@item.Priority</td>
        <td>
            <a href="@Url.Action("CatDetails", new {id=@item.Id})" class="btn btn-warning btn-sm">Изменить</a>
            <a href="@Url.Action("DeleteCat", new {id=@item.Id})" class="btn btn-danger btn-sm">Удалить</a>
        </td>
    </tr>
}
