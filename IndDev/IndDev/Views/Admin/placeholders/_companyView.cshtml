<div class="row">
    <div class="col-md-6">
        <div class="panel panel-primary" data-bind="with:Admin.currCompany">
            <div class="panel-heading controlsComp">
                <span data-bind="text:'Компания: '+CompanyName()"></span>
                <span data-bind="text:'г. '+Region()"></span>
                <button type="button" data-bind="click:Admin.showCompDet.bind($data, 'SHOW'), visible:Admin.showDet('CLOSE')"><i class="fa fa-arrow-down" aria-hidden="true"></i></button>
                <button type="button" data-bind="click:Admin.showCompDet.bind($data, 'CLOSE'), visible:Admin.showDet('SHOW')"><i class="fa fa-arrow-up" aria-hidden="true"></i></button>
                <button type="button" data-bind="click:Admin.addEvent.bind($data, 'MAIL')"><i class="fa fa-envelope" aria-hidden="true"></i></button>
                <button type="button" data-bind="click:Admin.addEvent.bind($data, 'PHONE')"><i class="fa fa-phone" aria-hidden="true"></i></button>
            </div>
            <div class="panel-body companyBlock">
                <table class="tbl table-responsive">
                    <tr data-bind="visible:Admin.showDet('SHOW')">
                        <th>ИНН</th>
                        <td data-bind="text:Inn"></td>
                    </tr>
                    <tr data-bind="visible:Admin.showDet('SHOW')">
                        <th>КПП</th>
                        <td data-bind="text:Kpp"></td>
                    </tr>
                    <tr data-bind="visible:Admin.showDet('SHOW')">
                        <th>ОГРН</th>
                        <td data-bind="text:Ogrn"></td>
                    </tr>
                    <tr data-bind="visible:Admin.showDet('SHOW')">
                        <th>Юр. адр.:</th>
                        <td data-bind="text:UrAdress"></td>
                    </tr>
                    <tr data-bind="visible:Admin.showDet('SHOW')">
                        <th>Пт. адр.:</th>
                        <td data-bind="text:RealAdress"></td>
                    </tr>
                    <tr>
                        <th>Сайт:</th>
                        <td><a data-bind="text:Offer, attr:{href:Offer}" href="#" target="_blank"></a></td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div class="col-md-6">
        <div class="panel panel-primary" data-bind="with:Admin.currCompany">
            <div class="panel-heading controlsComp">
                <span>Телефоны компании:</span>
                <button type="button" data-bind="click:Admin.addTell"><i class="fa fa-plus" aria-hidden="true"></i></button>
            </div>
            <div class="panel-body">
                <table class="tbl table-responsive" data-bind="foreach:Telephones">
                    <tr data-bind="if: mode()=== Admin.displayMode.view">
                        <th data-bind="text:Title"></th>
                        <td data-bind="text:PhoneNumber"></td>
                        <td>
                            <button type="button" data-bind="click:Admin.deletePhone"><i class="fa fa-minus" aria-hidden="true"></i></button>
                        </td>
                    </tr>
                    <tr data-bind="if: mode()=== Admin.displayMode.edit">
                        <td>
                            <input type="text" name="telephoneName" class="form-control" data-bind="value: Title" />
                        </td>
                        <td>
                            <input type="tel" name="tel" class="form-control" data-bind="value: PhoneNumber" />
                        </td>
                        <td>
                            <button data-bind="visible:kp, click:Admin.sndKp">К.П.</button>
                            <button type="button" data-bind="click:Admin.savePhone"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary" data-bind="with:Admin.currCompany">
            <div class="panel-heading controlsComp">
                <span>Описание / заметки</span>
                <button type="button" data-bind="click:Admin.addNewComment"><i class="fa fa-plus" aria-hidden="true"></i></button>
                <button type="button" data-bind="click:Admin.putCompany"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
            </div>
            <div class="panel-body">
                <textarea rows="6" class="descrArea" id="DescrInput" data-bind="textInput:Descr"></textarea>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary" data-bind="with:Admin.currCompany">
            <div class="panel-heading controlsComp">
                <span>Контакты:</span>
                <button type="button" data-bind="click:Admin.addPerson"><i class="fa fa-plus" aria-hidden="true"></i></button>
            </div>
            <div class="panel-body">
                <table class="tbl table-responsive" data-bind="foreach:PersonContacts">
                    <tr data-bind="if: mode()=== Admin.displayMode.view">
                        <th></th>
                        <th data-bind="text:PersonName"></th>
                        <td data-bind="text:Phone"></td>
                        <td data-bind="text:Email"></td>
                        <td>
                            <button data-bind="visible:kp, click:Admin.sndKp">К.П.</button>
                            <button type="button" data-bind="click:Admin.deletePerson"><i class="fa fa-minus" aria-hidden="true"></i></button>
                        </td>
                    </tr>
                    <tr data-bind="if: mode()=== Admin.displayMode.edit">
                        <td>Письмо для:</td>
                        <td>
                            <input type="text" name="persName" class="form-control" data-bind="value: PersonName"/>
                        </td>
                        <td>
                            <input type="tel" name="persTitle" class="form-control" data-bind="value: Phone"/>
                        </td>
                        <td>
                            <input type="text" name="email" class="form-control" data-bind="value: Email"/>
                        </td>
                        <td>
                            <button type="button" data-bind="click:Admin.savePerson"><i class="fa fa-floppy-o" aria-hidden="true"></i></button>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-md-12">
        <div class="panel panel-primary" data-bind="with:Admin.currCompany">
            <div class="panel-heading controlsComp">
                <span>События:</span>
                <button type="button" data-bind="click:Admin.addEvent"><i class="fa fa-plus" aria-hidden="true"></i></button>
            </div>
            <div class="panel-body">
                <table class="tbl table-responsive" data-bind="foreach:Events">
                    <tr data-bind="if: mode()=== Admin.displayMode.view">
                        <th data-bind="text:EventDate"></th>
                        <th>
                            <span data-bind="visible:EventType()==='letter'"><i class="fa fa-envelope-o" aria-hidden="true"></i></span>
                            <span data-bind="visible:EventType()==='phone'"><i class="fa fa-phone" aria-hidden="true"></i></span>
                        </th>
                        <th data-bind="text:Priority"></th>
                        <td data-bind="text:Descr"></td>
                        <td data-bind="text:EventInit?'Исходящее':'Входящее'"></td>
                        <td>
                        </td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
</div>
