@model IndDev.Domain.ViewModels.EditCustomer

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutSFoot.cshtml";
}

@using (Html.BeginForm("SaveCustomerData","Admin", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>@Model.Title</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model=>model.Details.Id)

        <div class="form-group">
            @Html.Label("Компания", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                <h1>@Model.Title</h1>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Адрес доставки:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <h1>@Model.Adress</h1>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Дата регистрации:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <h1>@Model.Register.ToLongDateString()</h1>
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Статус клиента:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Status, Model.CustStatus, Model.Status)
                @Html.ValidationMessageFor(model => model.Status, "", new { @class = "text-danger" })
            </div>
        </div>
        <h1>Реквизиты:</h1>
        <div class="form-group">
            @Html.Label("Наименование компании:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Details.CompanyName, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Details.CompanyName, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Юридический адрес:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Details.UrAdress, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Details.UrAdress, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("ИНН / КПП:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Details.Inn, new { htmlAttributes = new { @class = "" } })/
                @Html.EditorFor(model => model.Details.Kpp, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Details.Inn, "", new { @class = "text-danger" })
                @Html.ValidationMessageFor(model => model.Details.Kpp, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("ОГРН:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Details.Ogrn, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Details.Ogrn, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.Label("Фактический адрес:", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Details.RealAdress, new { htmlAttributes = new { @class = "" } })
                @Html.ValidationMessageFor(model => model.Details.RealAdress, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Сохранить" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Назад", "UserList")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
