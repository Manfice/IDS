@model IndDev.Domain.Entity.Menu.ProductMenuItem
@{
    Layout = "~/Views/Shared/_LayoutSFoot.cshtml";
}

<div class="productCategory">
    <h3>Категория продуктов @Model.Title</h3>
    <div class="picture pull-left">
        @if (Model.Image != null)
        {
            <img src="@Url.Content(Model.Image.Path)" alt="@Url.Content(Model.Image.AltText)" width="200" />
        }
        else
        {
            <h2>NO IMAGE</h2>
        }
    </div>
    <div class="detCatForm">
        @using (Html.BeginForm("EditSubCategory", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(menu => menu.Id)
            @Html.Hidden("retUrl", Request.Url.PathAndQuery)
            <label>Наименование: </label>
            <input type="text" name="title" value="@Model.Title" />
            <br />
            <label>Описание: </label>
            <textarea name="descr" rows="3">@Model.Descr</textarea>
            <br />
            @Html.CheckBox("IsRus", @Model.IsRus)
            @Html.LabelFor(item => item.IsRus, "Произведено в России?")
            <input type="file" name="photo" />
            <input type="submit" class="btn btn-primary btn-lg" value="Сохранить" />
        }
    </div>
</div>
<div class="subCat">
    <h2>Продукты в категории:</h2>
    @using (Html.BeginForm("UpdateProducts", "Admin", FormMethod.Post, new {enctype = "multipart/form-data"}))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("catId", Model.Id)
        <input name="prodList" id="prodList" type="file"/>
        <input type="submit" value="Обновить"/>
    }

    <table class="table table-hover table-responsive table-striped table-bordered">
        <thead>
            <tr>
                <td>Код:</td>
                <td>Артикул:</td>
                <td>Наименование:</td>
                <td style="max-width: 50px">Партнер:</td>
                <td style="max-width: 50px">Опт:</td>
                <td style="max-width: 50px">Розница:</td>
                <td style="max-width: 50px">Распр:</td>
                <td>Обновлен:</td>
                <td>Действия:</td>
            </tr>
        </thead>
        <tbody id="subCat">
            @Html.Action("ShowProducts", new { subCatId = @Model.Id })
        </tbody>
        <tfoot>
            <tr>
                <td>Артикул:</td>
                <td>Наименование:</td>
                <td>Описание:</td>
                <td>Гарантия:</td>
                <td>Ед. изм.:</td>
                <td>Брэнд:</td>
                <td>Склад:</td>
                <td>Услуга:</td>
                <td>Действия:</td>
            </tr>
        @Html.Action("AddProductToSubCat", new {subCatID = @Model.Id, returnUrl = Request.Url.PathAndQuery})
        </tfoot>
    </table>
</div>

<div class="well-sm">
    <a href="@Url.Action("CatDetails","Admin", new {id=Model.ProductMenu.Id})" class="btn btn-success btn-sm">Назад</a>
</div>