@model IndDev.Auth.Model.ResetPasswordVm
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_NewDesing.cshtml";
}
@section links
{
<link href="~/Content/Main.css" rel="stylesheet" />
    
}
<div class="loginForm">
    <div class="logForm">
        <h1>ВОССТАНОВИТЬ ПАРОЛЬ</h1>
        @using (@Html.BeginForm("ResetPassword", "Security", FormMethod.Post))
        {
            @Html.ValidationSummary()
            @Html.AntiForgeryToken()
            @Html.HiddenFor(model=> model.UserId)
            <label>ПАРОЛЬ</label><br />
            @Html.ValidationMessageFor(model => model.Password)
            @Html.PasswordFor(model => model.Password)<br />
            <label>ПОДТВЕРЖДЕНИЕ ПАРОЛЯ</label><br />
            @Html.ValidationMessageFor(model => model.ConfirmPassword)
            @Html.PasswordFor(model => model.ConfirmPassword)<br />
            <input type="submit" value="ВОССТАНОВИТЬ" />
        }
    </div>
</div>

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")

}