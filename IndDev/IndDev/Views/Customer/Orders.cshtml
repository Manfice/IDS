@model IEnumerable<IndDev.Domain.Entity.Orders.Order>
@{
    ViewBag.Title = "Мои заказы";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<div class="container">
    <div class="row">
        @Html.Action("LkNavigation", "Customer")        
    </div>
</div>

@if (!Model.Any())
{
    <div class="fon">
        <h1>У вас еще нет заказов.</h1>
    </div>
}
else
{
    <div class="container">
        <div class="row">
            <h1>Мои заказы:</h1>
            <table class="table table-responsive table-striped">
                <thead>
                <tr>
                    <td>#</td>
                    <td>Дата</td>
                    <td>Сумма</td>
                    <td>Подтвержден</td>
                    <td>Оплачен</td>
                    <td>Опции</td>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Number</td>
                        <td>@item.OrderDate.ToLongDateString()</td>
                        <td>@item.OrderLines.Sum(line => Math.Round(line.Quantity * line.Price, 2))</td>
                        <td>@item.OrderStatus.Moderated</td>
                        <td>@item.OrderStatus.Paid</td>
                        <td>@item.Number</td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
}