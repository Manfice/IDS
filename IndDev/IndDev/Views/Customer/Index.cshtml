@model IndDev.Domain.Entity.Customers.Customer
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_LayoutSFoot.cshtml";
}
<div class="container">
    <div class="row">
        @Html.Action("LkNavigation", "Customer")
    </div>
    <div class="row">
        <div class="col-lg-12">
            @Html.Action("About")
        </div>
    </div>
</div>
@section scripts{
    <script type="text/javascript">
    jQuery(document).ready(function($) {
        if ($('.renderBody').height() + 80 < $(window).height()) {
            $('.footer').css({
                position: 'absolute',
                bottom: 0,
                width: '100%'
            });
        } else {
            $('.footer').css({
                position: 'relative'
            });
        }
    });
</script>
}